{
  "name": "vite-circular-hmr",
  "version": "1.0.0",
  "description": "A Vite plugin to fix HMR issues caused by circular imports and dependency cycles",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "type-check": "tsc --noEmit",
    "build": "npm run type-check && tsup src/index.ts --format esm,cjs --dts --minify",
    "publish-to-npm": "npm run build && npm publish --access public"
  },
  "keywords": [
    "vite",
    "hmr",
    "circular-imports",
    "circular-dependency",
    "cyclic-dependency",
    "hot-module-replacement",
    "vite-hmr",
    "dependency-cycle",
    "module-graph",
    "vite-plugin",
    "hmr-loop",
    "vite-full-reload",
    "vite-hmr-fix"
  ],
  "author": "Cinny",
  "repository": {
    "type": "git",
    "url": "https://github.com/cin12211/vite-circular-hmr"
  },
  "license": "MIT",
  "peerDependencies": {
    "vite": "^5.*"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.4.0",
    "typescript": "^5.0.0",
    "vite": "^5.*"
  }
}
